<form action="/restaurants" method="POST" class="w-50 ml-5 mt-5">
    <div class="form-group">
        <label for="mame">餐廳名稱</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="餐廳名稱">
    </div>

    <div class="form-group">
        <label for="name_en">餐廳英文名稱</label>
        <input type="text" class="form-control" id="name_en" name="name_en">
    </div>

    <div class="form-group">
        <label for="category">餐廳類別</label>
        <input type="text" class="form-control" id="category" name="category">
    </div>

    <div class="form-group">
        <label for="image">圖片網址</label>
        <input type="url" class="form-control" id="image" name="image">
    </div>

    <div class="form-group">
        <label for="location">地址</label>
        <input type="text" class="form-control" id="location" name="location">
    </div>

     <div class="form-group">
        <label for="phone">電話</label>
        <input type="tel" class="form-control" id="phone" name="phone">
    </div>

    <div class="form-group">
        <label for="google_map">Google地圖
        </label>
        <input type="url" class="form-control" id="google_map" name="google_map">
    </div>

    <div class="form-group">
        <label for="rating">評價</label>
        <input type="number" class="form-control" id="rating" name="rating">
    </div>

    <div class="form-group">
        <label for="description">介紹</label>
        <input type="text" class="form-control" id="description" name="description">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>